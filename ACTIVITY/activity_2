SELECT CONCAT(lname,",",fname) AS Fullname, (payment.amount-transaction_records.amount) AS Amount_to_pay, transaction_records.amount AS Amount_paid, membership.status FROM client_member INNER JOIN payment ON client_member.client_ID = payment.client_ID INNER JOIN transaction_records ON client_member.client_ID=transaction_records.trans_ID INNER JOIN membership ON client_member.client_ID=membership.client_ID;